<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:background="@mipmap/ic_people"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_discuss_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="20dp"
        android:text="评价(666)"
        android:textColor="@color/fontColor333"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@+id/img"
        app:layout_constraintTop_toTopOf="parent" />
<ImageView
    android:id="@+id/ing"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_width="@dimen/dp_15"
    android:layout_height="@dimen/dp_15"
    android:background="@mipmap/ic_like"
    app:layout_constraintTop_toTopOf="@+id/img"
    app:layout_constraintBottom_toBottomOf="@+id/img"
    app:layout_constraintLeft_toRightOf="@+id/tv_discuss_num"/>
    <TextView
        android:id="@+id/tv_discuss_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:text="好评率99%"
        android:layout_marginLeft="@dimen/dp_5"
        android:textColor="@color/colorGray999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toTopOf="@+id/tv_discuss_num"
        app:layout_constraintBottom_toBottomOf="@+id/tv_discuss_num"
        app:layout_constraintLeft_toRightOf="@+id/ing"/>
</androidx.constraintlayout.widget.ConstraintLayout>